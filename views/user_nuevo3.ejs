              case error.PERMISSION_DENIED:
              txt = 'Permiso de localizacion denegada';
              break;
              case error.POSITION_UNAVAILABLE:
              txt = 'Permiso de localizacion inhabilitada';
              break;
              case error.TIMEOUT:
              txt = 'Tiempo de espera para la localizacion agotado';
              break;
